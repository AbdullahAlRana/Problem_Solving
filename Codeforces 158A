#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,k,c=0,a,b,f=0;
    cin>>n>>k;
    for(int i=0;i<k;i++)
    {
        cin>>a;
        if(a>0){
            c++;
        }
        else
            f=1;
    }
    if(f==0){for(int i=0;i<n-k;i++)
    {
        cin>>b;
        if(b==a)
        {
            c++;
        }
    }}
    cout<<c<<endl;
    return 0;
}
